<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p><%= link_to "Modifier", edit_blog_comment_path(blog, comment), remote: true %></p>
        <p><%= link_to "Supprimer", blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Voulez-vous vraiment supprimer cela?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>